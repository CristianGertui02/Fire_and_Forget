<Window x:Class="Fire_and_Forget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fire_and_Forget"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF00FF97" Offset="0.922"/>
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF09FF9B" Offset="0.117"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="Start" Content="Start" HorizontalAlignment="Left" Margin="159,108,0,0" VerticalAlignment="Top" Height="25" Width="79" Click="Start_Click"/>
        <Button x:Name="Stop" Content="Stop" HorizontalAlignment="Left" Margin="159,189,0,0" VerticalAlignment="Top" Height="28" Width="79" Click="Stop_Click"/>
        <Label x:Name="Lbl_ris" Content="" HorizontalAlignment="Left" Margin="277,140,0,0" VerticalAlignment="Top" Height="48" Width="123" BorderBrush="Black" Background="{x:Null}" UseLayoutRounding="False" FontSize="14" FontWeight="Bold"/>

    </Grid>
</Window>
